
	<div class="col-md-12">
		<%= image_tag @listener.photo.url(:medium) %>
		<div class="like">
			<% if current_user %>
				<% if current_user.likedListener?(@listener) %>
				  <%= link_to "unlike",like_listener_path(@listener),:method => "post", :remote => true, :class=>"btn btn-primary"  %>
				<% else %>
				  <%= link_to "like",like_listener_path(@listener),:method => "post",:remote => true, :class=>"btn btn-primary" %>
				<% end %>
			<% end	%>
		</div>
			
		<div class="like_num">
			<%= @like_num %> like
			<% @listener.like_users.each do |u| %> 
				<%= u.email %>
			<% end %>
		</div>
	


		<dl class="dl-horizontal">
		  <dt>name</dt>
		  <dd><%= @listener.name %></dd>
		  <dt>description</dt>
		  <dd><%= @listener.description %></dd>
		  <dt>price</dt>
		  <dd><%= number_to_currency(@listener.price, precision: 0) %></dd>
		</dl>
			<div>
			  <% if current_user %>
			 		<%= link_to "預約", new_user_order_path(current_user,:listener_id => @listener.id),  :class=>"btn btn-warning"   %>
			 	<% else %>
			 		<%= link_to "預約", new_user_session_path, :class=>"btn btn-warning" %>
			 	<% end %>	
			</div>
			<br>
			<div>
			<%= link_to "home", listeners_path, :class=>"btn btn-default" %> 
			</div>
	</div>

