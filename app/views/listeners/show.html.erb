<ul>
	<li><%= @listener.name %></li>
	<li><%= image_tag @listener.photo.url(:medium) %></li>
	<li><%= @listener.description %></li>
	<li><%= number_to_currency(@listener.price, precision: 0) %></li>
</ul>

<div class="like">
 <% if current_user %>
	<% if current_user.likedListener?(@listener) %>
	  <%= button_to "unlike",like_listener_path(@listener), :remote => true %>
	<% else %>
	  <%= button_to "like",like_listener_path(@listener),:remote => true %>
	<% end %>
 <% end	%>
</div>
<div class="like_num">
 <%= @like_num %> like
 <% @listener.like_users.each do |u| %> 
 	<%= u.email %>
 <% end %>
</div>

